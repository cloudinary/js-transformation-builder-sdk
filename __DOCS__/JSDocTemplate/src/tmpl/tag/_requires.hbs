{{#if requires}}
	{{#callout "Requires" "callout-warning"}}
		<form class="form-horizontal requires">
			{{#each requires}}
				<div class="form-group">
					<label class="col-sm-3 control-label requires-type">{{{link}}}</label>
					<div class="col-sm-9">
						<div class="form-control-static requires-summary">{{{summary}}}</div>
					</div>
				</div>
			{{/each}}
		</form>
	{{/callout}}
{{/if}}